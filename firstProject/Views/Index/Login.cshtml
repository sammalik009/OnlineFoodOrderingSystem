
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-cerulean.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <title>Signin - Online Food Ordering System</title>
</head>
<body>
    <div>
        <h1 style="margin-left:30%">Online Food Ordering System</h1>
        <div class="container body-content">
            <hr />
            <h2>Sign In</h2>
            @using (Html.BeginForm("LoginFunction", "Index", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <fieldset>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" minlength="5" maxlength="15" placeholder="Enter Your Name" required>
                        <i id="div1"></i>
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="password" class="form-control" name="Password" minlength="8" maxlength="20" id="Password" placeholder="Password" required>
                    </div>
                    <button type="submit" class="btn btn-primary">SignIn</button>
                </fieldset>
            }

            <div>
                Don't Have An Account?
                @Html.ActionLink("Signup", "Index")
            </div>

        </div>

        <div class="container body-content">
            <footer>
                <p>&copy; @DateTime.Now.Year - Online Ordering System</p>
            </footer>
        </div>

    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")

    }
</body>
</html>
